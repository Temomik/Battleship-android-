<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="team2.shattlebip">
    <uses-permission android:name="android.permission.INTERNET"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:screenOrientation="portrait"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
        <activity android:name=".Pages.MainMenu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Pages.MainActivity">
            <intent-filter>
                <action android:name="team2.shattlebip.Pages.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity android:name=".Pages.GameProcess">
            <intent-filter>
                <action android:name="team2.shattlebip.Pages.GameProcess" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Pages.FinalPage">
            <intent-filter>
                <action android:name="team2.shattlebip.Pages.FinalPage" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Pages.Credits">
            <intent-filter>
                <action android:name="team2.shattlebip.Pages.Credits" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Pages.ConnectMenu">
            <intent-filter>
                <action android:name="team2.shattlebip.Pages.ConnectMenu" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity android:name=".Pages.FinalPageLose">
            <intent-filter>
                <action android:name="team2.shattlebip.Pages.FinalPageLose" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
